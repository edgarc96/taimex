    // ========== USER SESSION FUNCTIONS ==========
    function getCookie(name) {
      const value = `; ${document.cookie}`;
      const parts = value.split(`; ${name}=`);
      if (parts.length === 2) return parts.pop().split(';').shift();
      return null;
    }
    
    function getUserInitials() {
      let initials = sessionStorage.getItem('userInitials');
      
      if (!initials) {
        initials = getCookie('userInitials');
        if (initials) {
          sessionStorage.setItem('userInitials', initials);
        } else {
          console.error('No user initials found');
          return '';
        }
      }
      
      return initials.toUpperCase();
    }
    
    function getUserName() {
      let userName = sessionStorage.getItem('userName');
      
      if (!userName) {
        userName = getCookie('userName');
        if (userName) {
          userName = decodeURIComponent(userName);
          sessionStorage.setItem('userName', userName);
        }
      }
      
      return userName || '';
    }

    // ========== DRAFTS SYSTEM ==========
    function saveForLater() {
      console.log('=== SAVE FOR LATER CLICKED ===');
      
      const userInitials = getUserInitials();
      
      if (!userInitials) {
        showNotification('User session not found. Please log in again.', 'error');
        return;
      }
      
      // Use fixed temp_id per user (po*EC)
      const tempId = 'po*' + userInitials.toUpperCase();
      console.log('Saving draft with temp_id:', tempId);
      
      // Check for existing draft
      fetch(`GET_PO_TMP.XML?user_initials=${encodeURIComponent(userInitials)}`)
        .then(response => response.text())
        .then(text => {
          const parser = new DOMParser();
          const xmlDoc = parser.parseFromString(text, 'text/xml');
          const drafts = xmlDoc.querySelectorAll('temp_po');
          
          if (drafts.length > 0) {
            const confirmMsg = 'You already have a draft saved. Do you want to overwrite it?';
            if (!confirm(confirmMsg)) {
              return;
            }
          }
          
          // Collect PO data
          const poData = collectPOData();
          poData.save_mode = 'TEMP';
          poData.temp_id = tempId;
          
          showNotification('Saving to TMP database...', 'loading');
          
          // Send to backend
          savePODataToTMP(poData);
        })
        .catch(error => {
          console.error('Error checking for existing draft:', error);
          // Proceed anyway
          const poData = collectPOData();
          poData.save_mode = 'TEMP';
          poData.temp_id = tempId;
          
          showNotification('Saving to TMP database...', 'loading');
          savePODataToTMP(poData);
        });
    }

    function savePODataToTMP(poData) {
      console.log('Saving PO data to TMP:', poData);
      
      // Convert to URL parameters
      const params = new URLSearchParams();
      
      // Add all PO fields
      params.append('temp_id', poData.temp_id || '');
      params.append('user_initials', getUserInitials());
      params.append('po_number', poData.po_number || '');
      params.append('vendor_code', poData.vendor_code || '');
      params.append('po_date', poData.po_date || '');
      params.append('status', poData.status || '');
      
      // Add line items as JSON
      if (poData.lineItems && poData.lineItems.length > 0) {
        params.append('line_items', JSON.stringify(poData.lineItems));
      }
      
      // Save to backend
      const xhr = new XMLHttpRequest();
      xhr.open('POST', 'SAVE_PO_TMP.XML', true);
      xhr.setRequestHeader('Content-Type', 'application/x-www-form-urlencoded');
      
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            console.log('SAVE request completed');
            
            const summary = `Draft Saved Successfully!

Saved Data:
‚Ä¢ Vendor: ${poData.vendor_code || '-'}
‚Ä¢ Line Items: ${poData.lineItems?.length || 0}

You can reload this draft anytime from "My Drafts".`;
            showNotification(summary, 'success');
            
            // Auto-reload drafts list
            setTimeout(() => {
              if (typeof loadSavedDrafts === 'function') {
                loadSavedDrafts();
              }
            }, 1500);
          } else {
            console.error('Server error:', xhr.status);
            showNotification('Server error: ' + xhr.status, 'error');
          }
        }
      };
      
      xhr.send(params.toString());
    }

