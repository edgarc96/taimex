    function extractPOData(poElement) {
      function getXMLValue(element, path) {
        const parts = path.split('/');
        let current = element;
        for (const part of parts) {
          const child = current.getElementsByTagName(part)[0];
          if (!child) {
            return '';
          }
          current = child;
        }
        const result = current.textContent.trim();
        return result;
      }

      const poData = {
        po_number: getXMLValue(poElement, 'po_number'),
        po_date: getXMLValue(poElement, 'po_date'),
        email: getXMLValue(poElement, 'email'),
        buyer_code: getXMLValue(poElement, 'buyer'),
        vendor_code: getXMLValue(poElement, 'vendor_number'),
        vendor_name: getXMLValue(poElement, 'vendor_info/vendor_name'),
        vendor_address: getXMLValue(poElement, 'vendor_info/vendor_address1'),
        vendor_city: getXMLValue(poElement, 'vendor_info/vendor_city'),
        vendor_country: getXMLValue(poElement, 'vendor_info/vendor_country'),
        ship_to_code: getXMLValue(poElement, 'ship_to'),
        ship_to: getXMLValue(poElement, 'ship_to'),
        // Create shipto_info object structure for fillShipToInfo function
        shipto_info: {
