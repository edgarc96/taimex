    function populateNeedFields(needs, lineItemIndex = null) {
      console.log('=== POPULATE NEED FIELDS CALLED ===');
      console.log('üîç Raw needs data from server:', needs);
      console.log('üîç Filtering for line item index:', lineItemIndex);
