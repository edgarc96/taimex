    function searchVendorsByQuery(query) {
      const xhr = new XMLHttpRequest();
      xhr.open('GET', `GET_VENDORS.XML?SEARCH=${encodeURIComponent(query)}`, true);
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4 && xhr.status === 200) {
          try {
            const parser = new DOMParser();
            const xmlDoc = parser.parseFromString(xhr.responseText, 'text/xml');
            const vendors = xmlDoc.getElementsByTagName('vendor');
            
            const suggestions = [];
            for (let i = 0; i < vendors.length; i++) {
              const vendor = vendors[i];
              suggestions.push({
                number: vendor.getElementsByTagName('vendor_number')[0]?.textContent || '',
                name: vendor.getElementsByTagName('vendor_name')[0]?.textContent || '',
                address: vendor.getElementsByTagName('vendor_address')[0]?.textContent || '',
                city: vendor.getElementsByTagName('vendor_city')[0]?.textContent || ''
              });
            }
            
            showSuggestions(suggestions);
          } catch (e) {
            console.error('Error parsing vendor search results:', e);
          }
        }
      };
      xhr.send();
    }

    function showSuggestions(suggestions) {
      const suggestionsDiv = document.getElementById('vendorSuggestions');
      suggestionsDiv.innerHTML = '';
      
      if (suggestions.length === 0) {
        suggestionsDiv.style.display = 'none';
        return;
      }
      
      suggestions.forEach((vendor, index) => {
        const item = document.createElement('div');
        item.style.cssText = `
          padding: 12px 16px; 
          cursor: pointer; 
          border-bottom: ${index === suggestions.length - 1 ? 'none' : '1px solid #f3f4f6'};
          transition: all 0.15s ease;
          font-size: 14px;
          line-height: 1.4;
        `;
        item.innerHTML = `
