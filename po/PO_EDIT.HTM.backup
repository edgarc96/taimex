    function searchPO() {
      const poNumber = document.getElementById('poSearchInput').value.trim();
      
      if (!poNumber) {
        // Show enhanced search results interface
        showEnhancedSearchResults();
        return;
      }
      
      console.log('Searching for PO:', poNumber);
      
      // Make AJAX request to get PO data
      const xhr = new XMLHttpRequest();
      xhr.open('GET', `GET_PO2_PRODUCTION.XML?PO_NUMBER=${encodeURIComponent(poNumber)}`, true);
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            try {
              const parser = new DOMParser();
              const xmlDoc = parser.parseFromString(xhr.responseText, 'text/xml');
              
              // Check for parsing errors
              const parseError = xmlDoc.querySelector('parsererror');
              if (parseError) {
                alert('Error parsing PO data: ' + parseError.textContent);
                return;
              }
              
              console.log('=== DEBUG: Checking for po elements ===');
              const poElements = xmlDoc.getElementsByTagName('po');
              console.log('Found po elements:', poElements.length);
              console.log('poElements:', poElements);
              
              if (poElements.length > 0) {
                const poElement = poElements[0];
                
                // Extract PO data
                console.log('=== DEBUG: Raw XML Response ===');
                console.log(xhr.responseText);
                console.log('=== DEBUG: Parsed XML Document ===');
                console.log(xmlDoc);
                console.log('=== DEBUG: PO Element ===');
                console.log(poElement);
                console.log('=== DEBUG: Looking for line_items section ===');
                const lineItemsCheck = poElement.querySelector('line_items');
                console.log('Found line_items section:', lineItemsCheck);
                if (lineItemsCheck) {
                  const lineItemsElements = Array.from(lineItemsCheck.querySelectorAll('line_item'));
                  console.log('Found line_item elements:', lineItemsElements.length);
                  lineItemsElements.forEach((item, i) => {
                    console.log(`Line item ${i}:`, item);
                  });
                }
                
                const poData = extractPOData(poElement);
                console.log('Extracted PO data:', poData);
                
                // PERSISTENT CACHE: Load cached data for this PO
                loadCacheFromStorage();
                
                // Fix missing po_number from server response
                if (!poData.po_number && poNumber) {
                  poData.po_number = poNumber;
                  console.log('Fixed missing po_number using search value:', poNumber);
                }
                
                // Show PO data in form
                fillFormWithPOData(poData);
                
                // üîß Ensure ack field listeners are setup after initial PO load
                if (typeof window.setupAckFieldListeners === 'function') {
                  setTimeout(() => window.setupAckFieldListeners(), 100);
                }
                
                // Load PO data to show info sections (vendor, ship to, buyer)
                loadPOData(poData);
                
              } else {
                alert('PO not found or invalid response format');
              }
            } catch (error) {
              console.error('Error processing PO data:', error);
              alert('Error processing PO data: ' + error.message);
            }
          } else {
            alert('Error loading PO data: ' + xhr.status + ' - ' + xhr.statusText);
          }
        }
      };
      
      xhr.ontimeout = function() {
        alert('Request timed out. Please try again.');
      };
      
      xhr.onerror = function() {
        alert('Network error occurred. Please check your connection.');
      };
      
      xhr.send();
    }

    // Function to reload PO data after save without showing alerts
    function reloadPOData(poNumber) {
      if (!poNumber) {
        console.error('‚ùå reloadPOData: No PO number provided');
        return;
      }
      
      // Make AJAX request to get PO data with cache busting
      const xhr = new XMLHttpRequest();
      const cacheBuster = '_reload_' + Date.now();
      xhr.open('GET', `GET_PO2_PRODUCTION.XML?PO_NUMBER=${encodeURIComponent(poNumber)}&${cacheBuster}`, true);
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            try {
              // Check if response is empty or invalid
              if (!xhr.responseText || xhr.responseText.trim() === '') {
                console.error('‚ùå Empty response from server on reload');
                console.warn('‚ö†Ô∏è Skipping reload to prevent blank page');
                return;
              }
              
              const parser = new DOMParser();
              const xmlDoc = parser.parseFromString(xhr.responseText, 'text/xml');
              
              // Check for parsing errors
              const parseError = xmlDoc.querySelector('parsererror');
              if (parseError) {
                console.error('‚ùå Error parsing PO data on reload:', parseError.textContent);
                console.warn('‚ö†Ô∏è Skipping reload to prevent blank page');
                return;
              }
              
              const poElements = xmlDoc.getElementsByTagName('po');
              
              if (poElements.length > 0) {
                const poElement = poElements[0];
                
                // Extract PO data (same as searchPO but without alerts)
                const poData = extractPOData(poElement);
                
                // Fix missing po_number from server response
                if (!poData.po_number && poNumber) {
                  poData.po_number = poNumber;
                }
                
                // üîß Ensure ack field listeners are setup after PO reload
                if (typeof window.setupAckFieldListeners === 'function') {
                  setTimeout(() => window.setupAckFieldListeners(), 100);
                }
                
                // Show PO data in form
                try {
                  fillFormWithPOData(poData);
                } catch (error) {
                  console.error('‚ùå Error in fillFormWithPOData:', error);
                }
                
                // Load PO data to show info sections (vendor, ship to, buyer)
                try {
                  loadPOData(poData);
                } catch (error) {
                  console.error('‚ùå Error in loadPOData:', error);
                }
                
                // CRITICAL: Force renderLineItems() after reload to ensure UI shows data
                setTimeout(() => {
                  try {
                    renderLineItems();
                    
                    // Force switch to Line Items tab to show the reloaded data
                    switchTab(2); // Line Items tab
                  } catch (error) {
                    console.error('‚ùå Error in post-reload UI update:', error);
                  }
                }, 200); // Small delay to ensure DOM is ready
              } else {
                console.error('‚ùå No PO found with number:', poNumber);
              }
            } catch (error) {
              console.error('‚ùå Error processing PO data on reload:', error);
            }
          } else {
            console.error('‚ùå Network error during PO reload. Status:', xhr.status);
          }
        }
      };
      
      xhr.onerror = function() {
        console.error('‚ùå Network error occurred during PO reload');
      };
      
      xhr.send();
    }

