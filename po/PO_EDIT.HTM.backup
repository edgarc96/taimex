    function loadDraftFromTMP(tempId) {
      console.log('Loading draft:', tempId);
      showNotification('Loading draft...', 'loading');
      
      const xhr = new XMLHttpRequest();
      xhr.open('GET', `GET_PO_TMP.XML?temp_id=${encodeURIComponent(tempId)}`, true);
      
      xhr.onreadystatechange = function() {
        if (xhr.readyState === 4) {
          if (xhr.status === 200) {
            // Parse and load draft data
            const parser = new DOMParser();
            const xmlDoc = parser.parseFromString(xhr.responseText, 'text/xml');
            const draft = xmlDoc.querySelector('temp_po');
            
            if (draft) {
              // Load data into form
              const poNumber = draft.querySelector('po_number')?.textContent || '';
              const vendorCode = draft.querySelector('vendor_code')?.textContent || '';
              const poDate = draft.querySelector('po_date')?.textContent || '';
              
              if (document.getElementById('poNumberInput')) {
                document.getElementById('poNumberInput').value = poNumber;
              }
              if (document.getElementById('vendorCodeInput')) {
                document.getElementById('vendorCodeInput').value = vendorCode;
              }
              if (document.getElementById('poDateInput')) {
                document.getElementById('poDateInput').value = poDate;
              }
              
              showNotification('Draft loaded successfully!', 'success');
              goToStep(1);
            } else {
              showNotification('Draft not found', 'error');
            }
          } else {
            showNotification('Error loading draft', 'error');
          }
        }
      };
      
      xhr.send();
    }

