    function searchVendors() {
      const input = document.getElementById('vendorCodeInput');
      const query = input.value.trim();
      
      if (query.length < 2) {
        hideVendorSuggestions();
        return;
      }
      
      clearTimeout(vendorSearchTimeout);
      vendorSearchTimeout = setTimeout(() => {
        searchVendorsByQuery(query);
