        // Trigger search to populate form
        const xhr = new XMLHttpRequest();
        xhr.open('GET', `GET_PO2_PRODUCTION.XML?PO_NUMBER=${encodeURIComponent(poNumber)}`, true);
        xhr.onreadystatechange = function() {
          if (xhr.readyState === 4 && xhr.status === 200) {
            try {
              const parser = new DOMParser();
              const xmlDoc = parser.parseFromString(xhr.responseText, 'text/xml');
              const poElements = xmlDoc.getElementsByTagName('po');
              
              if (poElements.length > 0) {
                const poElement = poElements[0];
                const poData = extractPOData(poElement);
                
