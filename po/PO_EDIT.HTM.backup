    function loadVendors() {
      return new Promise((resolve, reject) => {
        const xhr = new XMLHttpRequest();
        xhr.open('GET', 'GET_VENDORS.XML', true);
        xhr.onreadystatechange = function() {
          if (xhr.readyState === 4 && xhr.status === 200) {
            try {
              const parser = new DOMParser();
              const xmlDoc = parser.parseFromString(xhr.responseText, 'text/xml');
              const vendors = xmlDoc.getElementsByTagName('vendor');
              
              vendorsData = [];
              const vendorSelect = document.getElementById('vendorSelect');
              
              // Clear existing options except the first one
              if (vendorSelect) {
                while (vendorSelect.children.length > 1) {
                  vendorSelect.removeChild(vendorSelect.lastChild);
                }
              }
              
              for (let i = 0; i < vendors.length; i++) {
                const vendor = vendors[i];
                const vendorData = {
                  number: vendor.getElementsByTagName('vendor_number')[0]?.textContent || '',
                  name: vendor.getElementsByTagName('vendor_name')[0]?.textContent || '',
                  address: vendor.getElementsByTagName('vendor_address')[0]?.textContent || '',
                  city: vendor.getElementsByTagName('vendor_city')[0]?.textContent || ''
                };
                vendorsData.push(vendorData);
                
                // Add option to dropdown
                if (vendorSelect && vendorData.number) {
                  const option = document.createElement('option');
                  option.value = vendorData.number;
                  option.textContent = `${vendorData.number} - ${vendorData.name}`;
                  vendorSelect.appendChild(option);
                }
              }
              
              console.log('Loaded vendors:', vendorsData.length);
              resolve(vendorsData);
            } catch (e) {
              console.error('Error parsing vendors XML:', e);
              reject(e);
            }
          } else if (xhr.readyState === 4) {
            console.error('Failed to load vendors. Status:', xhr.status);
            reject(new Error('Failed to load vendors'));
          }
        };
        xhr.send();
      });
    }

